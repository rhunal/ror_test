<div class="card mt-3">
  <div class="card-header">
    Profile Details
  </div>

  <% if @user.profile_picture.attached? %>
    <%= link_to image_tag(
      url_for(@user.profile_picture), style: 'max-width: 200px;'),
      @user.profile_picture,
      target: '_blank'
    %>
  <% end %>
  <div class="row card-body">
    <% %w(
      name
      email
      phone_number
      address_line
      street
      landmark
      city
      state
      pincode
    ).each do |column| %>
      <div class="col-sm-4">
        <p><%= column.titleize %> : <%= @user.send column %></p>
      </div>
    <% end %>
  </div>

  <%= link_to 'Edit Profile', edit_user_path(@user), class: 'nav_link' %>
</div>